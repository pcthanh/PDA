<body>

    <div class="background">
        <div class="container">
            <div class="col-xs-12 txtselectnameandlogin">
                select a name and login
            </div>

            <div class="containerusername">
                @foreach (var item in @ViewBag.listUser)
                {
                    <div class="col-sm-1 col-xs-1 userinfo">
                        @Html.ActionLink((string)item.UserName, "LoginAction", "Login", new { username = (string)item.UserName }, null)
                    </div>
                }
            </div>

        </div>
    </div>
    
