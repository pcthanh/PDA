                '</div>' +
                '<div class="main-col-detail-print"onclick="PrintBill()">' +
                  '  PRINT RECEIPT' +
                '</div>';
            return str;
        }
        function detailBack() {
            $("#main-col-info").removeClass("main-hidden").addClass("main-show");
            $("#main-col-detail").removeClass("main-col-detail-show").addClass("main-hidden");
        }

        function neweatInClick() {

            $.ajax({
