        function eatinClick() {
            $("#main-col-info").html("");
            $("#main-col-info").removeClass("main-hidden");
            $("#main-col-eatin-and-tka").addClass("main-hidden");
            createPanelEatIn();
            for (i = 0; i < 5; i++) {
                $("#main-col-info").append(
                   '<div class="main-data-info-order" onclick="tableClick(' + i + ')">' +
                   '<div class="main-data-info-order-tableid" id=' + i + '>' +
